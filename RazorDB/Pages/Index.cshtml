@page
@model RazorDB.Pages.IndexModel

@{
    ViewData["Title"] = "Lista de Tareas";
}

<h1 class="display-4 mb-4">
    <i class="bi bi-list-check"></i> Mis Tareas
</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Crear Nueva Tarea
    </a>
</p>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    @foreach (var item in Model.Tarea)
    {
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-header">
                    <span class="badge bg-info">@item.estado</span>
                </div>
                <div class="card-body">
                    <h5 class="card-title">@item.nombreTarea</h5>
                    <p class="card-text">
                        <small class="text-muted">
                            <i class="bi bi-calendar"></i> Vence: @item.fechaVencimiento.ToShortDateString()
                        </small>
                    </p>
                </div>
                <div class="card-footer bg-transparent border-top-0">
                    <div class="btn-group w-100">
                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">
                            <i class="bi bi-eye"></i> Ver
                        </a>
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-pencil"></i> Editar
                        </a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                            <i class="bi bi-trash"></i> Eliminar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
